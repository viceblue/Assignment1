<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hzhu6.assignment1.ThreeplayerActivity"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:text="player1"
        android:id="@+id/playeroneofthree"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:text="player2"
        android:id="@+id/playertwoofthree"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/playerthreeofthree"
        android:layout_alignStart="@+id/playerthreeofthree"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:text="player3"
        android:id="@+id/playerthreeofthree"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
