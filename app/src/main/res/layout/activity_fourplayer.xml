<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hzhu6.assignment1.FourplayerActivity">

    <Button
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:text="player1"
        android:id="@+id/playeroneoffour"
        android:layout_alignTop="@+id/playertwooffour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:text="player2"
        android:id="@+id/playertwooffour"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:text="player3"
        android:id="@+id/playerthreeoffour"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:text="player4"
        android:id="@+id/playerfouroffour"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/playerthreeoffour" />

</RelativeLayout>
