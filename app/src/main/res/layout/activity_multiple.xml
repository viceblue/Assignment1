<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hzhu6.assignment1.MultipleActivity">

    <TextView android:text="multiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3-player"
        android:id="@+id/threeplayer"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4-player"
        android:id="@+id/fourplayer"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/threeplayer"
        android:layout_alignStart="@+id/threeplayer"
        android:layout_marginBottom="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2-player"
        android:id="@+id/twoplayer"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/threeplayer"
        android:layout_alignStart="@+id/threeplayer"
        android:layout_marginTop="64dp" />

</RelativeLayout>
